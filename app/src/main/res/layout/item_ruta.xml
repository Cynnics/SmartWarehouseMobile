<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:backgroundTint="#E8F5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvIdRuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruta #001"
            android:textColor="#004080"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repartidor: Juan Pérez"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvOrigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origen: Almacén Central"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destino: Tienda Norte"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: En ruta"
            android:textColor="#FFA500"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
