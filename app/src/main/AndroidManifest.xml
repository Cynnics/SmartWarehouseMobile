<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Permisos de ubicación -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Permiso para servicio en foreground (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Permiso específico para tracking de ubicación (Android 10+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <!-- Permiso para notificaciones (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Para que la app pueda ejecutarse en background -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartWarehouse"
        android:usesCleartextTraffic="true"
        android:name="com.smartwarehouse.mobile.utils.SmartWarehouseApp"
        tools:targetApi="31">


        <!-- LoginActivity como launcher -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (Router) -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Menú Repartidor -->
        <activity
            android:name=".ui.main.repartidor.RepartidorMainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Menú Cliente -->
        <activity
            android:name=".ui.main.cliente.ClienteMainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Menú Administradores y Empleados -->
        <activity
            android:name=".ui.main.AdminEmpleadoMainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Detalle de Pedido -->
        <activity
            android:name=".ui.pedidos.PedidoDetalleActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Crear Pedido (pendiente de implementar) -->
        <activity
            android:name=".ui.pedidos.crear.CrearPedidoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Otras activities -->
        <activity
            android:name=".ui.pedidos.PedidosActivity"
            android:exported="false" />

        <activity
            android:name=".ui.rutas.RutasActivity"
            android:exported="false" />

        <activity
            android:name=".ui.rutas.RutaDetalleActivity"
            android:exported="false" />

        <activity
            android:name=".ui.rutas.AsignarRutaActivity"
            android:exported="false" />

        <activity
            android:name=".ui.perfil.PerfilActivity"
            android:exported="false" />

        <activity android:name=".ui.catalogo.CatalogoActivity"
            android:exported="false" />
        <activity android:name=".ui.carrito.CarritoActivity"
            android:exported="false" />

        <!-- Tracking Control Activity -->
        <activity
            android:name=".tracking.TrackingControlActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Servicio de tracking real -->
        <service
            android:name=".service.LocationTrackingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Servicio de tracking simulado -->
        <service
            android:name=".service.MockLocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDTRdx3MybA_N2l5hbphrz6iNOB2btipQ0" />

    </application>

</manifest>