<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/gradient_header">

            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡Hola, Admin!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvRolUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Administrador"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¦ Gestiona los pedidos y rutas"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Botones principales -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BotÃ³n Asignar Rutas -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAsignarRutas"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="ðŸ—ºï¸ Asignar Rutas a Pedidos"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:iconGravity="textStart"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="12dp"/>

        <!-- BotÃ³n Consultar Pedidos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConsultarPedidos"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="ðŸ“„ Consultar Todos los Pedidos"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:iconGravity="textStart"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="12dp"/>

        <!-- BotÃ³n Perfil -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPerfil"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="ðŸ‘¤ Mi Perfil"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:iconGravity="textStart"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>

    <!-- BotÃ³n Cerrar SesiÃ³n (abajo) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Cerrar SesiÃ³n"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/error"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
